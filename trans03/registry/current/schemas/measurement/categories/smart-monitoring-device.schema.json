{
  "openapi": "3.0.3",
  "info": {
    "title": "CIC SSSS Measurement APIs - Smart Monitoring Device",
    "description": "APIs for pushing/querying smart-monitoring-device measurements (Measurement-001/002). Wearables: heartRate, temp, location, fall detection. See Appendix D.[file:1]",
    "version": "1.0.0",
    "contact": {
      "name": "CIC SSSS"
    }
  },
  "servers": [
    {
      "url": "https://api.example.com/v1"
    }
  ],
  "tags": [
    {
      "name": "Measurements",
      "description": "Continuous IoT measurement data push/query (CMP-hosted:001, Vendor-hosted:002).[file:1]"
    }
  ],
  "paths": {
    "/measurements": {
      "post": {
        "tags": ["Measurements"],
        "summary": "Measurement-001 Push smart-monitoring-device measurements (CMP-hosted)",
        "description": "Push continuous wearable vitals/location (array format).[file:1]",
        "operationId": "pushSmartMonitoringMeasurements",
        "security": [{"bearerAuth": []}],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/SmartMonitoringMeasurement"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiSuccessResponse"
                }
              }
            }
          }
        }
      },
      "get": {
        "tags": ["Measurements"],
        "summary": "Measurement-002 Query smart-monitoring-device measurements (Solution Vendor-hosted)",
        "description": "Paginated worker vitals and location history.[file:1]",
        "parameters": [
          {
            "name": "category4S",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "enum": ["smart-monitoring-device"]
            }
          },
          {
            "$ref": "#/components/parameters/siteId"
          },
          {
            "$ref": "#/components/parameters/supplierId"
          },
          {
            "$ref": "#/components/parameters/deviceSn"
          },
          {
            "$ref": "#/components/parameters/startTime"
          },
          {
            "$ref": "#/components/parameters/endTime"
          },
          {
            "$ref": "#/components/parameters/pageNum"
          },
          {
            "$ref": "#/components/parameters/pageSize"
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MeasurementListResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "SmartMonitoringMeasurement": {
        "type": "object",
        "required": ["category4S", "siteId", "supplierId", "deviceSn", "pushAt", "measurements"],
        "properties": {
          "category4S": {
            "type": "string",
            "const": "smart-monitoring-device",
            "description": "Fixed wearable category.[file:1]"
          },
          "siteId": {
            "type": "string",
            "example": "1693279120646"
          },
          "cicSiteId": {
            "type": "integer",
            "example": 438493849
          },
          "supplierId": {
            "type": "string",
            "example": "438"
          },
          "deviceSn": {
            "type": "string",
            "example": "SMARTWATCH-001"
          },
          "pushAt": {
            "type": "string",
            "format": "date-time",
            "example": "2025-01-06T14:40:16+08:00"
          },
          "measurements": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/MeasurementItem"
            }
          },
          "additionalMeasurements": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/MeasurementItem"
            }
          },
          "additionalProperties": {
            "type": "object",
            "properties": {
              "imageUrl": {
                "type": "string",
                "format": "uri",
                "example": "https://example.com/worker-photo.jpg"
              },
              "zoneId": {
                "type": "string",
                "example": "zone-001"
              },
              "workerId": {
                "type": "string",
                "example": "W123"
              }
            }
          }
        },
        "description": "Smart wearable measurement record.[file:1]"
      },
      "MeasurementItem": {
        "type": "object",
        "required": ["metricType", "dataType", "value", "observedAt"],
        "properties": {
          "metricType": {
            "type": "string",
            "enum": ["heartRate", "bodyTemperature", "systolic", "diastolic", "location", "fallDetected", "standstillDetected", "batteryLevel", "stepCount", "onlineStatus"],
            "example": "heartRate"
          },
          "dataType": {
            "type": "string",
            "enum": ["number", "integer", "boolean", "object"],
            "example": "number"
          },
          "value": {
            "oneOf": [
              {"type": "number"},
              {"type": "integer"},
              {"type": "boolean"},
              {
                "type": "object",
                "properties": {
                  "latitude": {"type": "number"},
                  "longitude": {"type": "number"},
                  "accuracy": {"type": "number"}
                }
              }
            ],
            "example": 85
          },
          "unit": {
            "type": "string",
            "example": "bpm"
          },
          "observedAt": {
            "type": "string",
            "format": "date-time",
            "example": "2025-01-06T14:40:10+08:00"
          },
          "normalRange": {
            "type": "object",
            "properties": {
              "min": {"type": "number"},
              "max": {"type": "number"}
            },
            "example": {"min": 60, "max": 100}
          }
        }
      },
      "ApiSuccessResponse": {
        "type": "object",
        "properties": {
          "code": {"type": "integer", "example": 10000},
          "msg": {"type": "string", "example": "success"},
          "data": {"type": "null"}
        }
      },
      "MeasurementListResponse": {
        "type": "object",
        "properties": {
          "code": {"type": "integer", "example": 10000},
          "msg": {"type": "string", "example": "success"},
          "data": {
            "type": "object",
            "properties": {
              "list": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/SmartMonitoringMeasurement"
                }
              },
              "totalCount": {"type": "integer"},
              "pageNum": {"type": "integer"},
              "pageSize": {"type": "integer"}
            }
          }
        }
      }
    },
    "parameters": {
      "siteId": {
        "name": "siteId",
        "in": "query",
        "required": true,
        "schema": {"type": "string"}
      },
      "supplierId": {
        "name": "supplierId",
        "in": "query",
        "required": true,
        "schema": {"type": "string"}
      },
      "deviceSn": {
        "name": "deviceSn",
        "in": "query",
        "schema": {"type": "string"}
      },
      "startTime": {
        "name": "startTime",
        "in": "query",
        "schema": {"type": "string", "format": "date-time"}
      },
      "endTime": {
        "name": "endTime",
        "in": "query",
        "schema": {"type": "string", "format": "date-time"}
      },
      "pageNum": {
        "name": "pageNum",
        "in": "query",
        "schema": {"type": "integer", "default": 1}
      },
      "pageSize": {
        "name": "pageSize",
        "in": "query",
        "schema": {"type": "integer", "default": 10, "maximum": 1000}
      }
    }
  }
}
