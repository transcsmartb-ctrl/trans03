{
  "openapi": "3.0.3",
  "info": {
    "title": "4S Alert AI-Monitoring Category Schema",
    "description": "OpenAPI 3.0.3 schema for ai-monitoring alerts (e.g., AI cameras detecting unsafe behaviours like PPE non-compliance, smoking, restricted areas), extending AlertBase. Derived from CIC SSSS Appendix E AI-Monitoring and scenarios 5-10.[file:1]",
    "version": "current"
  },
  "servers": [
    {
      "url": "https://your-domain.example.com/api/v1"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "description": "OAuth 2.0 Bearer token.[file:1]"
      }
    },
    "schemas": {
      "AlertAIMonitoring": {
        "description": "AI-monitoring specific alert, allOf AlertBase.",
        "allOf": [
          {"$ref": "#/components/schemas/AlertBase"},
          {
            "type": "object",
            "properties": {
              "category4S": {
                "const": "ai-monitoring",
                "description": "Fixed AI-monitoring category.[file:1]"
              },
              "alertProperties": {
                "type": "object",
                "properties": {
                  "alertType": {
                    "type": "string",
                    "enum": [
                      "fatigued-driving",
                      "no-driver",
                      "receiving-phone-calls",
                      "smoking-behaviour",
                      "distracted-driving",
                      "not-wearing-safety-helmet",
                      "not-wearing-reflective-vest",
                      "open-flame",
                      "open-smoke",
                      "restricted-area",
                      "mechanical-approach",
                      "edge-dangerous-area",
                      "lifting-area",
                      "machinery-speeding",
                      "not-wearing-safety-belt",
                      "others"
                    ],
                    "description": "AI alert types (Appendix H).[file:1]",
                    "example": "not-wearing-safety-helmet"
                  }
                }
              },
              "maskedImageUrl": {
                "type": "string",
                "format": "uri",
                "description": "Privacy-masked alert image URL.[file:1]",
                "example": "https://example.com/masked.jpeg?token=xxx"
              },
              "confidenceScore": {
                "type": "number",
                "minimum": 0,
                "maximum": 100,
                "description": "AI confidence (0-100).[file:1]",
                "example": 92
              }
            },
            "required": ["category4S"]
          }
        ]
      },
      "AlertBase": {
        "$ref": "../alert/base.schema.json#/$defs/AlertBase"
      }
    }
  },
  "paths": {
    "/alerts/ai-monitoring": {
      "post": {
        "tags": ["AI-Monitoring Alerts"],
        "summary": "Alert-001: Add AI-monitoring alert (e.g., PPE violation, smoking detection).[file:1]",
        "operationId": "addAIMonitoringAlert",
        "security": [{"bearerAuth": []}],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {"$ref": "#/components/schemas/AlertAIMonitoring"}
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {"$ref": "#/components/schemas/SuccessResponse"}
              }
            }
          },
          "400": {"$ref": "#/components/schemas/ErrorResponse"},
          "429": {"description": "Rate limit exceeded.[file:1]"}
        }
      },
      "get": {
        "tags": ["AI-Monitoring Alerts"],
        "summary": "Alert-004: Query AI-monitoring alerts (filter by confidence, type).[file:1]",
        "operationId": "queryAIMonitoringAlerts",
        "security": [{"bearerAuth": []}],
        "parameters": [
          {
            "name": "siteId",
            "in": "query",
            "required": true,
            "schema": {"type": "string"}
          },
          {
            "name": "supplierId",
            "in": "query",
            "required": true,
            "schema": {"type": "string"}
          },
          {
            "name": "minConfidence",
            "in": "query",
            "schema": {"type": "number", "minimum": 0, "maximum": 100}
          },
          {
            "name": "alertType",
            "in": "query",
            "schema": {"$ref": "#/components/schemas/AlertAIMonitoring/properties/alertProperties/properties/alertType"}
          },
          {
            "name": "pageNum",
            "in": "query",
            "schema": {"type": "integer", "default": 1}
          },
          {
            "name": "pageSize",
            "in": "query",
            "schema": {"type": "integer", "default": 10, "maximum": 200}
          }
        ],
        "responses": {
          "200": {
            "description": "Paginated AI alerts",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": {"type": "integer", "example": 10000},
                    "msg": {"type": "string", "example": "success"},
                    "data": {
                      "type": "object",
                      "properties": {
                        "list": {
                          "type": "array",
                          "items": {"$ref": "#/components/schemas/AlertAIMonitoring"}
                        },
                        "totalCount": {"type": "integer"},
                        "pageNum": {"type": "integer"},
                        "pageSize": {"type": "integer"}
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
