{
  "openapi": "3.0.3",
  "info": {
    "title": "4S Alert Confined-Space Category Schema",
    "description": "OpenAPI 3.0.3 schema for confined-space alerts (e.g., gas detectors for O2, CO2, H2S; high crowd density), extending AlertBase. From CIC SSSS Appendix E Confined-Space (p.167), scenario 4/11.[file:1]",
    "version": "current"
  },
  "servers": [
    {
      "url": "https://your-domain.example.com/api/v1"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "description": "OAuth 2.0 Bearer token.[file:1]"
      }
    },
    "schemas": {
      "AlertConfinedSpace": {
        "description": "Confined-space specific alert, allOf AlertBase.",
        "allOf": [
          {"$ref": "#/components/schemas/AlertBase"},
          {
            "type": "object",
            "properties": {
              "category4S": {
                "const": "confined-space",
                "description": "Fixed confined-space category.[file:1]"
              },
              "alertProperties": {
                "type": "object",
                "properties": {
                  "alertType": {
                    "type": "string",
                    "enum": [
                      "humidity-alert",
                      "temperature-alert",
                      "co-alert",
                      "co2-alert",
                      "o2-alert",
                      "hcho-alert",
                      "tvoc-alert",
                      "pm25-alert",
                      "pm10-alert",
                      "h2s-alert",
                      "ch4-alert",
                      "windSpeed-alert",
                      "lel-alert",
                      "illuminance-alert",
                      "high-crowd-density"
                    ],
                    "description": "Gas/environmental alerts (Appendix H); high-crowd-density from scenario 4.[file:1]",
                    "example": "o2-alert"
                  }
                }
              },
              "bioStatus": {
                "type": "boolean",
                "description": "Biometric status of workers in space (e.g., alive/present).[file:1]",
                "example": true
              },
              "sosFlag": {
                "type": "boolean",
                "description": "SOS emergency flag for confined space rescue.[file:1]",
                "example": false
              },
              "thresholdMax": {
                "type": "number",
                "description": "Upper threshold exceeded (e.g., CO2 ppm).[file:1]",
                "example": 1000
              },
              "thresholdMin": {
                "type": "number",
                "description": "Lower threshold violated (e.g., O2 %).[file:1]",
                "example": 19.5
              }
            },
            "required": ["category4S"]
          }
        ]
      },
      "AlertBase": {
        "$ref": "../alert/base.schema.json#"
      },
      "GasLevel": {
        "type": "object",
        "properties": {
          "gasType": {"type": "string", "enum": ["O2", "CO2", "CO", "H2S", "CH4"], "example": "O2"},
          "value": {"type": "number", "example": 18.5},
          "unit": {"type": "string", "example": "VOL"}
        },
        "description": "Measured gas level tied to alertNum/thresholds.[file:1]"
      },
      "SuccessResponse": {
        "type": "object",
        "properties": {
          "code": {"type": "integer", "example": 10000},
          "msg": {"type": "string", "example": "success"}
        }
      },
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "code": {"type": "integer", "example": 10002},
          "msg": {"type": "string", "example": "missing parameters"}
        }
      }
    }
  },
  "paths": {
    "/alerts/confined-space": {
      "post": {
        "tags": ["Confined-Space Alerts"],
        "summary": "Alert-001: Add confined-space alert (e.g., low O2, high CO2).[file:1]",
        "operationId": "addConfinedSpaceAlert",
        "security": [{"bearerAuth": []}],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {"$ref": "#/components/schemas/AlertConfinedSpace"}
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {"$ref": "#/components/schemas/SuccessResponse"}
              }
            }
          },
          "400": {"$ref": "#/components/schemas/ErrorResponse"},
          "413": {"description": "Payload too large (>10MB).[file:1]"},
          "429": {"description": "Rate limited.[file:1]"}
        }
      },
      "get": {
        "tags": ["Confined-Space Alerts"],
        "summary": "Alert-004: Query confined-space alerts (filter by gas type, thresholds).[file:1]",
        "operationId": "queryConfinedSpaceAlerts",
        "security": [{"bearerAuth": []}],
        "parameters": [
          {
            "name": "siteId",
            "in": "query",
            "required": true,
            "schema": {"type": "string"}
          },
          {
            "name": "supplierId",
            "in": "query",
            "required": true,
            "schema": {"type": "string"}
          },
          {
            "name": "alertType",
            "in": "query",
            "schema": {"$ref": "#/components/schemas/AlertConfinedSpace/properties/alertProperties/properties/alertType"}
          },
          {
            "name": "sosFlag",
            "in": "query",
            "schema": {"type": "boolean"}
          },
          {
            "name": "minAlertNum",
            "in": "query",
            "schema": {"type": "number", "description": "Min alertNum (e.g., O2 <19.5)"}
          },
          {
            "name": "pageNum",
            "in": "query",
            "schema": {"type": "integer", "default": 1}
          },
          {
            "name": "pageSize",
            "in": "query",
            "schema": {"type": "integer", "default": 10, "maximum": 200}
          }
        ],
        "responses": {
          "200": {
            "description": "Paginated alerts",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": {"type": "integer"},
                    "msg": {"type": "string"},
                    "data": {
                      "type": "object",
                      "properties": {
                        "list": {"type": "array", "items": {"$ref": "#/components/schemas/AlertConfinedSpace"}},
                        "totalCount": {"type": "integer"},
                        "pageNum": {"type": "integer"},
                        "pageSize": {"type": "integer"}
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
