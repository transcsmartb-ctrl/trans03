{
  "openapi": "3.0.3",
  "info": {
    "title": "4S Alert Base Schema",
    "description": "OpenAPI 3.0.3 representation of the 4S Alert Base schema for Swagger UI compatibility, derived from CIC SSSS API Framework Alert-001/002/004 payloads and Appendix E.[file:1]",
    "version": "current"
  },
  "servers": [
    {
      "url": "https://your-domain.example.com/api/v1"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "description": "OAuth 2.0 Bearer token as per framework section 3.[file:1]"
      }
    },
    "schemas": {
      "AlertBase": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "category4S",
          "siteId",
          "supplierId",
          "deviceSn",
          "pushAt",
          "alertProperties"
        ],
        "properties": {
          "category4S": {
            "type": "string",
            "description": "4S category (e.g., smart-monitoring-device, ai-monitoring). See Appendix A.[file:1]",
            "example": "smart-monitoring-device"
          },
          "siteId": {
            "type": "string",
            "description": "Vendor-defined site ID.[file:1]",
            "example": "AAYL001"
          },
          "supplierId": {
            "type": "string",
            "description": "Device/software supplier ID.[file:1]",
            "example": "SUP001"
          },
          "deviceSn": {
            "type": "string",
            "description": "Device serial number.[file:1]",
            "example": "SN-8655078237"
          },
          "pushAt": {
            "type": "string",
            "format": "date-time",
            "description": "Push timestamp (ISO 8601 with offset, e.g., 2025-01-06T14:40:16+08:00).[file:1]",
            "example": "2025-01-06T14:40:16+08:00"
          },
          "alertProperties": {
            "type": "object",
            "additionalProperties": false,
            "required": ["alertId", "alertStatus"],
            "properties": {
              "alertId": {
                "type": "string",
                "description": "Unique alert ID.[file:1]",
                "example": "alert-001"
              },
              "alertType": {
                "type": "string",
                "description": "Alert type code (e.g., low-battery). See Appendix H.[file:1]",
                "example": "low-battery"
              },
              "alertLevel": {
                "type": "integer",
                "enum": [0, 1, 2],
                "description": "0=Notification, 1=Warning, 2=Critical.[file:1]",
                "example": 1
              },
              "alertStatus": {
                "type": "integer",
                "enum": [0, 1, 2, 3, 4, 5, 6, 7],
                "description": "0=Unprocessed, ..., 7=Cancelled.[file:1]",
                "example": 0
              },
              "alertMessage": {
                "type": "object",
                "additionalProperties": {
                  "type": "string"
                },
                "properties": {
                  "en-HK": {"type": "string", "example": "Low battery"},
                  "zh-HK": {"type": "string", "example": "低電量"},
                  "zh-CN": {"type": "string", "example": "低电量"}
                },
                "description": "Multilingual messages (BCP 47 keys).[file:1]"
              },
              "alertTime": {
                "type": "string",
                "format": "date-time",
                "description": "Trigger timestamp.[file:1]",
                "example": "2025-01-06T14:40:16+08:00"
              },
              "alertNum": {
                "type": "number",
                "description": "Numeric alert value (e.g., temperature).[file:1]",
                "example": 37.2
              }
            }
          },
          "cicSiteId": {
            "type": "integer",
            "description": "Optional CIC site ID.[file:1]",
            "example": 100001
          },
          "notifyRecipient": {
            "type": "object",
            "properties": {
              "name": {"type": "string", "example": "John Doe"},
              "phone": {"type": "string", "example": "98765432"}
            },
            "description": "Recipient details.[file:1]"
          },
          "imageUrl": {
            "type": "string",
            "format": "uri",
            "description": "Alert image URL (with token).[file:1]",
            "example": "https://example.com/image.jpeg?token=xxx"
          },
          "maskedImageUrl": {
            "type": "string",
            "format": "uri",
            "description": "Privacy-masked image URL.[file:1]",
            "example": "https://example.com/masked.jpeg?token=xxx"
          },
          "triggerPersonnel": {
            "type": "object",
            "properties": {
              "id": {"type": "string", "example": "W1001"},
              "name": {"type": "string", "example": "Jane Smith"}
            },
            "description": "Triggering person.[file:1]"
          },
          "alertDistance": {
            "type": "object",
            "properties": {
              "value": {"type": "number", "example": 0.1},
              "unit": {"type": "string", "example": "m"}
            },
            "description": "Proximity distance.[file:1]"
          },
          "thresholdMax": {"type": "number", "example": 100, "description": "Upper threshold.[file:1]"},
          "thresholdMin": {"type": "number", "example": 20, "description": "Lower threshold.[file:1]"},
          "workerId": {"type": "string", "example": "W1001"},
          "bioStatus": {"type": "boolean", "example": true},
          "sosFlag": {"type": "boolean", "example": false},
          "confidenceScore": {"type": "number", "example": 85, "description": "AI confidence (0-100)."},
          "emergencyContact": {"type": "string", "example": "Chan Tai Man 98765432"}
        }
      },
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "code": {"type": "integer", "example": 10002},
          "msg": {"type": "string", "example": "missing parameters siteId"}
        },
        "description": "Standard error format (see section 2.12).[file:1]"
      },
      "SuccessResponse": {
        "type": "object",
        "properties": {
          "code": {"type": "integer", "example": 10000},
          "msg": {"type": "string", "example": "success"}
        }
      }
    }
  },
  "paths": {
    "/alerts": {
      "post": {
        "tags": ["Alert Management"],
        "summary": "Alert-001: Add alert (Push from vendor to CMP).[file:1]",
        "operationId": "addAlert",
        "security": [{"bearerAuth": []}],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {"$ref": "#/components/schemas/AlertBase"}
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {"$ref": "#/components/schemas/SuccessResponse"}
              }
            }
          },
          "400": {"description": "Bad Request", "content": {"application/json": {"schema": {"$ref": "#/components/schemas/ErrorResponse"}}}},
          "401": {"description": "Unauthorized"},
          "429": {"description": "Rate Limited"}
        }
      },
      "patch": {
        "tags": ["Alert Management"],
        "summary": "Alert-002: Update alert.[file:1]",
        "operationId": "updateAlert",
        "security": [{"bearerAuth": []}],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {"$ref": "#/components/schemas/AlertBase"}
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {"$ref": "#/components/schemas/SuccessResponse"}
              }
            }
          }
        }
      },
      "get": {
        "tags": ["Alert Management"],
        "summary": "Alert-004: Query alerts (Pull).[file:1]",
        "operationId": "queryAlerts",
        "security": [{"bearerAuth": []}],
        "parameters": [
          {
            "name": "category4S",
            "in": "query",
            "required": true,
            "schema": {"type": "string"}
          },
          {
            "name": "siteId",
            "in": "query",
            "required": true,
            "schema": {"type": "string"}
          },
          {
            "name": "supplierId",
            "in": "query",
            "required": true,
            "schema": {"type": "string"}
          },
          {
            "name": "startTime",
            "in": "query",
            "schema": {"type": "string", "format": "date-time"}
          },
          {
            "name": "endTime",
            "in": "query",
            "schema": {"type": "string", "format": "date-time"}
          },
          {
            "name": "pageNum",
            "in": "query",
            "schema": {"type": "integer", "default": 1}
          },
          {
            "name": "pageSize",
            "in": "query",
            "schema": {"type": "integer", "default": 10}
          }
        ],
        "responses": {
          "200": {
            "description": "Paginated alerts",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": {"type": "integer"},
                    "msg": {"type": "string"},
                    "data": {
                      "type": "object",
                      "properties": {
                        "list": {"type": "array", "items": {"$ref": "#/components/schemas/AlertBase"}},
                        "totalCount": {"type": "integer"},
                        "pageNum": {"type": "integer"},
                        "pageSize": {"type": "integer"}
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/alerts/media": {
      "post": {
        "tags": ["Alert Management"],
        "summary": "Alert-003: Push alert media.[file:1]",
        "operationId": "pushAlertMedia",
        "security": [{"bearerAuth": []}],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "alertId": {"type": "string"},
                  "videoUrl": {"type": "string", "format": "uri"}
                }
              }
            }
          }
        },
        "responses": {"200": {"description": "Success"}}
      }
    }
  }
}
