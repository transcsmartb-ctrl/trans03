{
  "openapi": "3.0.3",
  "info": {
    "title": "CIC SSSS Software APIs - VR Training",
    "description": "APIs for adding/updating/querying vr-training software data (construction safety training records). From CIC SSSS API Framework v0.16 (Software-001/002/004). See Appendix C.[file:1]",
    "version": "1.0.0",
    "contact": {
      "name": "CIC SSSS"
    }
  },
  "servers": [
    {
      "url": "https://api.example.com/v1"
    }
  ],
  "tags": [
    {
      "name": "Software",
      "description": "Software data management (e-permits, tracking systems, VR training).[file:1]"
    }
  ],
  "paths": {
    "/software": {
      "post": {
        "tags": ["Software"],
        "summary": "Software-001 Add software related data (CMP-hosted)",
        "description": "Add new vr-training record.[file:1]",
        "operationId": "addVRTraining",
        "security": [{"bearerAuth": []}],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/VRTraining"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiResponse"
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          }
        }
      },
      "patch": {
        "tags": ["Software"],
        "summary": "Software-002 Update software related data",
        "description": "Partial update for vr-training record.[file:1]",
        "operationId": "updateVRTraining",
        "security": [{"bearerAuth": []}],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/VRTrainingUpdate"
              }
            }
          }
        },
        "responses": {
          "200": {
            "$ref": "#/components/responses/Success"
          }
        }
      },
      "delete": {
        "tags": ["Software"],
        "summary": "Software-003 Delete software related data",
        "description": "Delete by trainingId and siteId.[file:1]",
        "operationId": "deleteVRTraining",
        "security": [{"bearerAuth": []}],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SoftwareDeleteRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "$ref": "#/components/responses/Success"
          }
        }
      },
      "get": {
        "tags": ["Software"],
        "summary": "Software-004 Query software related data (Solution Vendor-hosted)",
        "description": "List vr-training records with pagination.[file:1]",
        "parameters": [
          {
            "$ref": "#/components/parameters/category4S"
          },
          {
            "$ref": "#/components/parameters/siteId"
          },
          {
            "$ref": "#/components/parameters/supplierId"
          },
          {
            "$ref": "#/components/parameters/pageNum"
          },
          {
            "$ref": "#/components/parameters/pageSize"
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SoftwareListResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "VRTraining": {
        "type": "object",
        "required": ["category4S", "siteId", "supplierId", "vrTrainingProperties"],
        "properties": {
          "category4S": {
            "type": "string",
            "enum": ["vr-training"],
            "example": "vr-training",
            "description": "Fixed 4S category.[file:1]"
          },
          "siteId": {
            "type": "string",
            "example": "1693279120646",
            "description": "Vendor-defined site key.[file:1]"
          },
          "cicSiteId": {
            "type": "integer",
            "example": 438493849,
            "description": "CIC-standard site ID (optional).[file:1]"
          },
          "supplierId": {
            "type": "string",
            "example": "438",
            "description": "Software supplier ID.[file:1]"
          },
          "pushAt": {
            "type": "string",
            "format": "date-time",
            "example": "2025-01-06T14:40:16+08:00",
            "description": "Record update timestamp.[file:1]"
          },
          "vrTrainingProperties": {
            "type": "object",
            "required": ["trainingId", "trainingName", "workerId", "workerName", "completionDate", "trainingType", "durationMinutes", "score"],
            "properties": {
              "trainingId": {
                "type": "string",
                "example": "VR-TRAIN-001",
                "description": "Unique VR training session ID.[file:1]"
              },
              "trainingName": {
                "type": "string",
                "example": "Fall Prevention Training Module",
                "description": "VR training module/course name.[file:1]"
              },
              "workerId": {
                "type": "string",
                "example": "W12345",
                "description": "Worker ID who completed training.[file:1]"
              },
              "workerName": {
                "type": "string",
                "example": "John Doe",
                "description": "Worker full name.[file:1]"
              },
              "completionDate": {
                "type": "string",
                "format": "date-time",
                "example": "2025-01-06T10:30:00+08:00",
                "description": "Training completion timestamp.[file:1]"
              },
              "trainingType": {
                "type": "string",
                "enum": ["fall-prevention", "crane-operation", "confined-space", "scaffold-safety", "general-safety"],
                "example": "fall-prevention",
                "description": "VR training topic.[file:1]"
              },
              "durationMinutes": {
                "type": "integer",
                "example": 45,
                "description": "Training session duration in minutes.[file:1]"
              },
              "score": {
                "type": "number",
                "minimum": 0,
                "maximum": 100,
                "example": 92.5,
                "description": "Assessment score percentage.[file:1]"
              },
              "certificateUrl": {
                "type": "string",
                "format": "uri",
                "example": "https://example.com/cert/VR-TRAIN-001.pdf"
              },
              "status": {
                "type": "string",
                "enum": ["completed", "in-progress", "failed", "expired"],
                "example": "completed"
              }
            }
          }
        },
        "description": "VR-aided construction safety training completion records.[file:1]"
      },
      "VRTrainingUpdate": {
        "type": "object",
        "required": ["trainingId"],
        "properties": {
          "trainingId": {
            "type": "string",
            "example": "VR-TRAIN-001",
            "description": "Training ID to update.[file:1]"
          },
          "vrTrainingProperties": {
            "$ref": "#/components/schemas/VRTraining/properties/vrTrainingProperties"
          }
        },
        "description": "Update request with trainingId.[file:1]"
      },
      "SoftwareDeleteRequest": {
        "type": "object",
        "required": ["trainingId", "siteId"],
        "properties": {
          "trainingId": {
            "type": "string",
            "example": "VR-TRAIN-001"
          },
          "siteId": {
            "type": "string",
            "example": "1693279120646"
          }
        },
        "description": "Delete request by trainingId and siteId.[file:1]"
      },
      "ApiResponse": {
        "type": "object",
        "properties": {
          "code": {
            "type": "integer",
            "example": 10000
          },
          "msg": {
            "type": "string",
            "example": "success"
          },
          "data": {
            "$ref": "#/components/schemas/VRTraining"
          }
        }
      },
      "SoftwareListResponse": {
        "type": "object",
        "properties": {
          "code": {
            "type": "integer",
            "example": 10000
          },
          "msg": {
            "type": "string",
            "example": "success"
          },
          "data": {
            "type": "object",
            "properties": {
              "list": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/VRTraining"
                }
              },
              "totalCount": {
                "type": "integer",
                "example": 100
              },
              "pageSize": {
                "type": "integer",
                "example": 10
              },
              "pageNum": {
                "type": "integer",
                "example": 1
              }
            }
          }
        }
      }
    },
    "parameters": {
      "category4S": {
        "name": "category4S",
        "in": "query",
        "required": true,
        "schema": {
          "type": "string",
          "enum": ["vr-training"]
        },
        "example": "vr-training"
      },
      "siteId": {
        "name": "siteId",
        "in": "query",
        "required": true,
        "schema": {
          "type": "string"
        },
        "example": "1693279120646"
      },
      "supplierId": {
        "name": "supplierId",
        "in": "query",
        "schema": {
          "type": "string"
        },
        "example": "438"
      },
      "pageNum": {
        "name": "pageNum",
        "in": "query",
        "schema": {
          "type": "integer",
          "default": 1
        }
      },
      "pageSize": {
        "name": "pageSize",
        "in": "query",
        "schema": {
          "type": "integer",
          "default": 10,
          "maximum": 200
        }
      }
    },
    "responses": {
      "Success": {
        "description": "Success",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "code": {
                  "type": "integer",
                  "example": 10000
                },
                "msg": {
                  "type": "string",
                  "example": "success"
                }
              }
            }
          }
        }
      },
      "BadRequest": {
        "description": "Bad Request",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "code": {
                  "type": "integer",
                  "example": 10002
                },
                "msg": {
                  "type": "string",
                  "example": "missing parameters: siteId"
                }
              }
            }
          }
        }
      }
    }
  }
}
