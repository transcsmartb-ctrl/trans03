openapi: 3.0.3
info:
  title: Digitalised Tracking System Schema (4S API)
  version: 1.0.0
  description: Schema for software category 'digitalised-tracking-system' used in device registration (Software-001/002), tracking site plants, powered tools, and ladders.[file:1]
servers:
  - url: https://example-domain/api/v1
paths:
  /software:
    post:
      summary: Add Digitalised Tracking System software (Software-001)
      security:
        - bearerAuth: []
      requestBody:
        required: true
        content:
          application/json:
            schema:
              $ref: '#/components/schemas/DigitalisedTrackingSystem'
      responses:
        '200':
          description: Success
          content:
            application/json:
              schema:
                type: object
                properties:
                  code:
                    type: integer
                    example: 10000
                  msg:
                    type: string
                    example: success[file:1]
    patch:
      summary: Update Digitalised Tracking System software (Software-002)
      security:
        - bearerAuth: []
      requestBody:
        required: true
        content:
          application/json:
            schema:
              $ref: '#/components/schemas/DigitalisedTrackingSystem'
      responses:
        '200':
          description: Success[file:1]
    delete:
      summary: Delete Digitalised Tracking System software (Software-003)
      parameters:
        - name: deviceSn
          in: query
          schema:
            type: string
          required: true
        - name: siteId
          in: query
          schema:
            type: string
          required: true[file:1]
      responses:
        '200':
          description: Success
components:
  securitySchemes:
    bearerAuth:
      type: http
      scheme: bearer
      bearerFormat: JWT
  schemas:
    DigitalisedTrackingSystem:
      type: object
      required:
        - category4S
        - siteId
        - supplierId
      properties:
        category4S:
          type: string
          enum: [digitalised-tracking-system]
          example: digitalised-tracking-system[file:1]
        siteId:
          type: string
          description: Unique site ID defined by solution vendor.
          example: 1693279120646[file:1]
        cicSiteId:
          type: integer
          description: CIC-standard site ID (recommended).
          example: 4338493849[file:1]
        supplierId:
          type: string
          description: Unique supplier ID.
          example: 438[file:1]
        pushAt:
          type: string
          format: date-time
          description: Data push time (ISO 8601).
          example: 2025-05-16T090001+0800[file:1]
        plantToolProperties:
          type: object
          description: Properties for tracked plant/tool/ladders.
          properties:
            deviceSn:
              type: string
              description: Serial number.
              example: 9125-0007[file:1]
            deviceStatus:
              type: integer
              description: Status (e.g., 1=active).
              example: 1[file:1]
            machineId:
              type: string
              description: Machine ID.
              example: 139209320[file:1]
            machineType:
              type: integer
              description: Machine type code.
              example: 145[file:1]
            type:
              type: integer
              description: Equipment type code.
              example: 1[file:1]
            operators:
              type: string
              description: Comma-separated operators.
              example: zhangsan,lisi[file:1]
            entryDate:
              type: string
              format: date
              description: Entry date.
              example: 2025-05-16[file:1]
            departureDate:
              type: string
              format: date
              description: Departure date.
              example: 2026-05-16[file:1]
            checkStatus:
              type: integer
              description: 0=Pending, 1=Passed, 2=Failed.
              example: 1[file:1]
            imageUrl:
              type: string
              format: uri
              description: Image URL (jpeg).
              example: https://xxxx.jpeg[file:1]
            model:
              type: string
              example: DGA402[file:1]
            safeLoad:
              type: string
              example: 27.82T[file:1]
            brand:
              type: string
              example: Makita[file:1]
            voltage:
              type: integer
              description: 1=110V, 2=220V, 3=380V.
              example: 2[file:1]
            manufacturer:
              type: string
              example: test manufacturer[file:1]
            manufactureDate:
              type: string
              format: date
              example: 2025-04-08[file:1]
            certificateNumber:
              type: string
              example: c0001[file:1]
            certificateStartDate:
              type: string
              format: date
              example: 2025-10-08[file:1]
            certificateEndDate:
              type: string
              format: date
              example: 2026-10-08[file:1]
            certificateStatus:
              type: integer
              example: 0[file:1]
            inspectorId:
              type: integer
              example: 4839480343[file:1]
            inspectorName:
              type: string
              example: kris[file:1]
            createTime:
              type: string
              format: date-time
              example: 2025-05-16T090001+0800[file:1]
            creator:
              type: string
              example: kris[file:1]
        additionalProperties:
          type: object
          properties:
            cicSiteId:
              type: integer
              example: 4338493849[file:1]
            qrCode:
              type: string
              example: 403483984[file:1]
            size:
              type: string
              example: 10m[file:1]
            locationDesc:
              type: string
              example: The second floor 204[file:1]
            operationManual:
              type: string
              format: uri
              example: https://xxxx.pdf[file:1]
            remark:
              type: string
              example: 251132VH4578[file:1]
