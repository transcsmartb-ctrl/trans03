{
  "openapi": "3.0.3",
  "info": {
    "title": "CIC SSSS Alert APIs - Lock-Key",
    "description": "APIs for lock-key alerts (Alert-001/002/004). Smart access control for hazardous areas. Unauthorized access, damage, low battery alerts. See Appendix E[file:1].",
    "version": "1.0.0",
    "contact": {
      "name": "CIC SSSS"
    }
  },
  "servers": [
    {
      "url": "https://api.example.com/v1"
    }
  ],
  "tags": [
    {
      "name": "Alerts",
      "description": "Lock-key access control alerts (001/002: push/update, 004: query).[file:1]"
    }
  ],
  "paths": {
    "/alerts": {
      "post": {
        "tags": ["Alerts"],
        "summary": "Alert-001 Add lock-key alert (CMP-hosted)",
        "description": "Push access control alerts (array format).[file:1]",
        "operationId": "addLockKeyAlert",
        "security": [{"bearerAuth": []}],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/LockKeyAlert"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "$ref": "#/components/responses/Success"
          }
        }
      },
      "patch": {
        "tags": ["Alerts"],
        "summary": "Alert-002 Update lock-key alert",
        "description": "Update access alert status/message.[file:1]",
        "operationId": "updateLockKeyAlert",
        "security": [{"bearerAuth": []}],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/LockKeyAlert"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "$ref": "#/components/responses/Success"
          }
        }
      },
      "get": {
        "tags": ["Alerts"],
        "summary": "Alert-004 Query lock-key alerts (Vendor-hosted)",
        "description": "Paginated access control alerts by time range.[file:1]",
        "parameters": [
          {
            "name": "category4S",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "enum": ["lock-key"]
            }
          },
          {
            "$ref": "#/components/parameters/siteId"
          },
          {
            "$ref": "#/components/parameters/supplierId"
          },
          {
            "$ref": "#/components/parameters/startTime"
          },
          {
            "$ref": "#/components/parameters/endTime"
          },
          {
            "$ref": "#/components/parameters/pageNum"
          },
          {
            "$ref": "#/components/parameters/pageSize"
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AlertListResponse"
                }
              }
            }
          }
        }
      }
    },
    "/alerts/media": {
      "post": {
        "tags": ["Alerts"],
        "summary": "Alert-003 Push lock-key alert media",
        "description": "Upload access event photos/videos (optional).[file:1]",
        "operationId": "pushLockKeyAlertMedia",
        "security": [{"bearerAuth": []}],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LockKeyMediaRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "$ref": "#/components/responses/Success"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "LockKeyAlert": {
        "type": "object",
        "required": ["category4S", "siteId", "supplierId", "deviceSn", "pushAt", "alertProperties"],
        "properties": {
          "category4S": {
            "type": "string",
            "const": "lock-key"
          },
          "siteId": {
            "type": "string",
            "example": "1693279120646"
          },
          "cicSiteId": {
            "type": "integer",
            "example": 438493849
          },
          "supplierId": {
            "type": "string",
            "example": "LOCK-SUPPLIER-001"
          },
          "deviceSn": {
            "type": "string",
            "example": "LOCK-SN-001"
          },
          "pushAt": {
            "type": "string",
            "format": "date-time",
            "example": "2025-01-06T14:40:16+08:00"
          },
          "alertProperties": {
            "$ref": "#/components/schemas/LockKeyAlertProperties"
          },
          "additionalProperties": {
            "type": "object",
            "properties": {
              "imageUrl": {
                "type": "string",
                "format": "uri"
              },
              "lockId": {
                "type": "string",
                "example": "LK-001"
              },
              "zoneId": {
                "type": "string",
                "example": "hazard-zone-01"
              },
              "accessType": {
                "type": "string",
                "enum": ["authorized", "unauthorized", "tamper"],
                "example": "unauthorized"
              },
              "attemptedUserId": {
                "type": "string",
                "example": "UNKNOWN-001"
              },
              "attemptedUserName": {
                "type": "string",
                "example": "Unauthorized Access"
              },
              "batteryLevel": {
                "type": "number",
                "example": 15.5,
                "description": "Battery percentage"
              },
              "accessAttempts": {
                "type": "integer",
                "example": 3
              },
              "lastAccessTime": {
                "type": "string",
                "format": "date-time"
              }
            }
          }
        }
      },
      "LockKeyAlertProperties": {
        "type": "object",
        "required": ["alertId", "alertType", "alertLevel", "alertStatus", "alertMessage", "alertTime", "alertNum"],
        "properties": {
          "alertId": {
            "type": "string",
            "example": "LK-ALERT-001"
          },
          "alertType": {
            "type": "string",
            "enum": ["unauthorized-access", "damage", "low-battery"],
            "example": "unauthorized-access"
          },
          "alertLevel": {
            "type": "integer",
            "enum": [0, 1, 2],
            "example": 2,
            "description": "0-Notification, 1-Warning, 2-Critical[file:1]"
          },
          "alertStatus": {
            "type": "integer",
            "enum": [0,1,2,3,4,5,6,7],
            "example": 0,
            "description": "0-Unprocessed...7-Cancelled[file:1]"
          },
          "alertMessage": {
            "type": "object",
            "properties": {
              "zh-CN": {"type": "string"},
              "zh-HK": {"type": "string"},
              "en-HK": {"type": "string", "example": "Unauthorized access attempt on Lock LK-001 in hazard-zone-01"}
            }
          },
          "alertTime": {
            "type": "string",
            "format": "date-time",
            "example": "2025-01-06T14:40:16+08:00"
          },
          "alertNum": {
            "type": "number",
            "example": 3,
            "description": "Number of attempts or battery level[file:1]"
          }
        }
      },
      "LockKeyMediaRequest": {
        "type": "array",
        "items": {
          "type": "object",
          "required": ["category4S", "siteId", "supplierId", "alertId", "pushAt", "videoUrl"],
          "properties": {
            "category4S": {"type": "string", "const": "lock-key"},
            "siteId": {"type": "string"},
            "cicSiteId": {"type": "integer"},
            "supplierId": {"type": "string"},
            "alertId": {"type": "string"},
            "pushAt": {"type": "string", "format": "date-time"},
            "videoUrl": {
              "type": "string",
              "format": "uri",
              "pattern": ".*\\.(mp4|avi|wmv|rmvb|jpg|png)$"
            }
          }
        }
      },
      "ApiResponse": {
        "type": "object",
        "properties": {
          "code": {"type": "integer", "example": 10000},
          "msg": {"type": "string", "example": "success"},
          "data": {"type": "null"}
        }
      },
      "AlertListResponse": {
        "type": "object",
        "properties": {
          "code": {"type": "integer", "example": 10000},
          "msg": {"type": "string", "example": "success"},
          "data": {
            "type": "object",
            "properties": {
              "list": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/LockKeyAlert"
                }
              },
              "totalCount": {"type": "integer", "example": 110},
              "pageNum": {"type": "integer"},
              "pageSize": {"type": "integer"}
            }
          }
        }
      }
    },
    "parameters": {
      "siteId": {
        "name": "siteId",
        "in": "query",
        "required": true,
        "schema": {"type": "string"}
      },
      "supplierId": {
        "name": "supplierId",
        "in": "query",
        "required": true,
        "schema": {"type": "string"}
      },
      "startTime": {
        "name": "startTime",
        "in": "query",
        "schema": {"type": "string", "format": "date-time"}
      },
      "endTime": {
        "name": "endTime",
        "in": "query",
        "schema": {"type": "string", "format": "date-time"}
      },
      "pageNum": {
        "name": "pageNum",
        "in": "query",
        "schema": {"type": "integer", "default": 1}
      },
      "pageSize": {
        "name": "pageSize",
        "in": "query",
        "schema": {"type": "integer", "default": 10}
      }
    },
    "responses": {
      "Success": {
        "description": "Success",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/ApiResponse"
            }
          }
        }
      }
    }
  }
}
