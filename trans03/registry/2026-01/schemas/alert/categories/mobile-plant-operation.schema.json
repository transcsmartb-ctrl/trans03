{
  "openapi": "3.0.3",
  "info": {
    "title": "CIC SSSS Alert APIs - Mobile Plant Operation",
    "description": "APIs for mobile plant operation alerts (Alert-001/002/004). Excavators, bulldozers, dump trucks - proximity, speed, overturn, blind spot alerts. See Appendix E[file:1].",
    "version": "1.0.0",
    "contact": {
      "name": "CIC SSSS"
    }
  },
  "servers": [
    {
      "url": "https://api.example.com/v1"
    }
  ],
  "tags": [
    {
      "name": "Alerts",
      "description": "Mobile plant operation safety alerts (001/002: push/update, 004: query).[file:1]"
    }
  ],
  "paths": {
    "/alerts": {
      "post": {
        "tags": ["Alerts"],
        "summary": "Alert-001 Add mobile-plant-operation alert (CMP-hosted)",
        "description": "Push mobile plant safety alerts (array format).[file:1]",
        "operationId": "addMobilePlantAlert",
        "security": [{"bearerAuth": []}],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/MobilePlantAlert"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "$ref": "#/components/responses/Success"
          }
        }
      },
      "patch": {
        "tags": ["Alerts"],
        "summary": "Alert-002 Update mobile-plant-operation alert",
        "description": "Update mobile plant alert status/message.[file:1]",
        "operationId": "updateMobilePlantAlert",
        "security": [{"bearerAuth": []}],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/MobilePlantAlert"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "$ref": "#/components/responses/Success"
          }
        }
      },
      "get": {
        "tags": ["Alerts"],
        "summary": "Alert-004 Query mobile-plant-operation alerts (Vendor-hosted)",
        "description": "Paginated mobile plant safety alerts by time range.[file:1]",
        "parameters": [
          {
            "name": "category4S",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "enum": ["mobile-plant-operation"]
            }
          },
          {
            "$ref": "#/components/parameters/siteId"
          },
          {
            "$ref": "#/components/parameters/supplierId"
          },
          {
            "$ref": "#/components/parameters/startTime"
          },
          {
            "$ref": "#/components/parameters/endTime"
          },
          {
            "$ref": "#/components/parameters/pageNum"
          },
          {
            "$ref": "#/components/parameters/pageSize"
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AlertListResponse"
                }
              }
            }
          }
        }
      }
    },
    "/alerts/media": {
      "post": {
        "tags": ["Alerts"],
        "summary": "Alert-003 Push mobile-plant-operation alert media",
        "description": "Upload plant collision/proximity incident videos.[file:1]",
        "operationId": "pushMobilePlantAlertMedia",
        "security": [{"bearerAuth": []}],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/MobilePlantMediaRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "$ref": "#/components/responses/Success"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "MobilePlantAlert": {
        "type": "object",
        "required": ["category4S", "siteId", "supplierId", "deviceSn", "pushAt", "alertProperties"],
        "properties": {
          "category4S": {
            "type": "string",
            "const": "mobile-plant-operation"
          },
          "siteId": {
            "type": "string",
            "example": "1693279120646"
          },
          "cicSiteId": {
            "type": "integer",
            "example": 438493849
          },
          "supplierId": {
            "type": "string",
            "example": "PLANT-SUPPLIER-001"
          },
          "deviceSn": {
            "type": "string",
            "example": "EXCAVATOR-001"
          },
          "pushAt": {
            "type": "string",
            "format": "date-time",
            "example": "2025-01-06T14:40:16+08:00"
          },
          "alertProperties": {
            "$ref": "#/components/schemas/MobilePlantAlertProperties"
          },
          "additionalProperties": {
            "type": "object",
            "properties": {
              "imageUrl": {
                "type": "string",
                "format": "uri"
              },
              "plantId": {
                "type": "string",
                "example": "MPO-001"
              },
              "plantType": {
                "type": "string",
                "enum": ["excavator", "bulldozer", "dump-truck", "forklift", "others"],
                "example": "excavator"
              },
              "operatorId": {
                "type": "string",
                "example": "OP-456"
              },
              "operatorName": {
                "type": "string",
                "example": "WONG Siu Kei"
              },
              "zoneId": {
                "type": "string",
                "example": "zone-002"
              },
              "speed": {
                "type": "number",
                "example": 8.5,
                "unit": "km/h"
              },
              "maxSpeed": {
                "type": "number",
                "example": 5.0
              },
              "proximityDistance": {
                "type": "number",
                "example": 1.8,
                "unit": "meters"
              },
              "safeDistance": {
                "type": "number",
                "example": 3.0
              },
              "tiltAngle": {
                "type": "number",
                "example": 4.2,
                "unit": "degrees"
              },
              "blindSpotObjects": {
                "type": "integer",
                "example": 2
              }
            }
          }
        }
      },
      "MobilePlantAlertProperties": {
        "type": "object",
        "required": ["alertId", "alertType", "alertLevel", "alertStatus", "alertMessage", "alertTime", "alertNum"],
        "properties": {
          "alertId": {
            "type": "string",
            "example": "MPO-ALERT-001"
          },
          "alertType": {
            "type": "string",
            "enum": ["proximity-danger", "speed-exceeded", "tilt-warning", "blind-spot", "overturn-risk", "others"],
            "example": "proximity-danger"
          },
          "alertLevel": {
            "type": "integer",
            "enum": [0, 1, 2],
            "example": 2,
            "description": "0-Notification, 1-Warning, 2-Critical[file:1]"
          },
          "alertStatus": {
            "type": "integer",
            "enum": [0,1,2,3,4,5,6,7],
            "example": 0,
            "description": "0-Unprocessed...7-Cancelled[file:1]"
          },
          "alertMessage": {
            "type": "object",
            "properties": {
              "zh-CN": {"type": "string"},
              "zh-HK": {"type": "string"},
              "en-HK": {"type": "string", "example": "Excavator MPO-001 proximity alert: 1.8m to worker in zone-002"}
            }
          },
          "alertTime": {
            "type": "string",
            "format": "date-time",
            "example": "2025-01-06T14:40:16+08:00"
          },
          "alertNum": {
            "type": "number",
            "example": 1.8,
            "description": "Distance/speed/angle value triggering alert[file:1]"
          }
        }
      },
      "MobilePlantMediaRequest": {
        "type": "array",
        "items": {
          "type": "object",
          "required": ["category4S", "siteId", "supplierId", "alertId", "pushAt", "videoUrl"],
          "properties": {
            "category4S": {"type": "string", "const": "mobile-plant-operation"},
            "siteId": {"type": "string"},
            "cicSiteId": {"type": "integer"},
            "supplierId": {"type": "string"},
            "alertId": {"type": "string"},
            "pushAt": {"type": "string", "format": "date-time"},
            "videoUrl": {
              "type": "string",
              "format": "uri",
              "pattern": ".*\\.(mp4|avi|wmv|rmvb|jpg|png)$"
            }
          }
        }
      },
      "ApiResponse": {
        "type": "object",
        "properties": {
          "code": {"type": "integer", "example": 10000},
          "msg": {"type": "string", "example": "success"},
          "data": {"type": "null"}
        }
      },
      "AlertListResponse": {
        "type": "object",
        "properties": {
          "code": {"type": "integer", "example": 10000},
          "msg": {"type": "string", "example": "success"},
          "data": {
            "type": "object",
            "properties": {
              "list": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/MobilePlantAlert"
                }
              },
              "totalCount": {"type": "integer", "example": 110},
              "pageNum": {"type": "integer"},
              "pageSize": {"type": "integer"}
            }
          }
        }
      }
    },
    "parameters": {
      "siteId": {
        "name": "siteId",
        "in": "query",
        "required": true,
        "schema": {"type": "string"}
      },
      "supplierId": {
        "name": "supplierId",
        "in": "query",
        "required": true,
        "schema": {"type": "string"}
      },
      "startTime": {
        "name": "startTime",
        "in": "query",
        "schema": {"type": "string", "format": "date-time"}
      },
      "endTime": {
        "name": "endTime",
        "in": "query",
        "schema": {"type": "string", "format": "date-time"}
      },
      "pageNum": {
        "name": "pageNum",
        "in": "query",
        "schema": {"type": "integer", "default": 1}
      },
      "pageSize": {
        "name": "pageSize",
        "in": "query",
        "schema": {"type": "integer", "default": 10}
      }
    },
    "responses": {
      "Success": {
        "description": "Success",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/ApiResponse"
            }
          }
        }
      }
    }
  }
}
