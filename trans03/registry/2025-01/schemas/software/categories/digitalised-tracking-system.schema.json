{
  "openapi": "3.0.3",
  "info": {
    "title": "CIC SSSS Software APIs - Digitalised Tracking System",
    "description": "APIs for adding/updating/querying digitalised-tracking-system software data (tools/ladders/plants tracking). From CIC SSSS API Framework v0.16 (Software-001/002/004). See Appendix C.[file:1]",
    "version": "1.0.0",
    "contact": {
      "name": "CIC SSSS"
    }
  },
  "servers": [
    {
      "url": "https://api.example.com/v1"
    }
  ],
  "tags": [
    {
      "name": "Software",
      "description": "Software data management (e-permits, tracking systems, VR training).[file:1]"
    }
  ],
  "paths": {
    "/software": {
      "post": {
        "tags": ["Software"],
        "summary": "Software-001 Add software related data (CMP-hosted)",
        "description": "Add new digitalised-tracking-system record.[file:1]",
        "operationId": "addDigitalisedTracking",
        "security": [{"bearerAuth": []}],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/DigitalisedTrackingSystem"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiResponse"
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          }
        }
      },
      "patch": {
        "tags": ["Software"],
        "summary": "Software-002 Update software related data",
        "description": "Partial update for digitalised-tracking-system.[file:1]",
        "operationId": "updateDigitalisedTracking",
        "security": [{"bearerAuth": []}],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/DigitalisedTrackingUpdate"
              }
            }
          }
        },
        "responses": {
          "200": {
            "$ref": "#/components/responses/Success"
          }
        }
      },
      "delete": {
        "tags": ["Software"],
        "summary": "Software-003 Delete software related data",
        "description": "Delete by trackingId and siteId.[file:1]",
        "operationId": "deleteDigitalisedTracking",
        "security": [{"bearerAuth": []}],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SoftwareDeleteRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "$ref": "#/components/responses/Success"
          }
        }
      },
      "get": {
        "tags": ["Software"],
        "summary": "Software-004 Query software related data (Solution Vendor-hosted)",
        "description": "List digitalised-tracking-system records with pagination.[file:1]",
        "parameters": [
          {
            "$ref": "#/components/parameters/category4S"
          },
          {
            "$ref": "#/components/parameters/siteId"
          },
          {
            "$ref": "#/components/parameters/supplierId"
          },
          {
            "$ref": "#/components/parameters/pageNum"
          },
          {
            "$ref": "#/components/parameters/pageSize"
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SoftwareListResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "DigitalisedTrackingSystem": {
        "type": "object",
        "required": ["category4S", "siteId", "supplierId", "digitalisedTrackingProperties"],
        "properties": {
          "category4S": {
            "type": "string",
            "enum": ["digitalised-tracking-system"],
            "example": "digitalised-tracking-system",
            "description": "Fixed 4S category.[file:1]"
          },
          "siteId": {
            "type": "string",
            "example": "1693279120646",
            "description": "Vendor-defined site key.[file:1]"
          },
          "cicSiteId": {
            "type": "integer",
            "example": 438493849,
            "description": "CIC-standard site ID (optional).[file:1]"
          },
          "supplierId": {
            "type": "string",
            "example": "438",
            "description": "Software supplier ID.[file:1]"
          },
          "pushAt": {
            "type": "string",
            "format": "date-time",
            "example": "2025-01-06T14:40:16+08:00",
            "description": "Record update timestamp.[file:1]"
          },
          "digitalisedTrackingProperties": {
            "type": "object",
            "required": ["trackingId", "itemName", "itemType", "serialNumber", "nextInspectionDate"],
            "properties": {
              "trackingId": {
                "type": "string",
                "example": "TRACK-001",
                "description": "Unique tracking system ID.[file:1]"
              },
              "itemName": {
                "type": "string",
                "example": "Ladder ABC123",
                "description": "Name of tracked item (tool/plant/ladder).[file:1]"
              },
              "itemType": {
                "type": "string",
                "enum": ["ladder", "powered-tool", "site-plant"],
                "example": "ladder",
                "description": "Type: ladder, powered-tool, site-plant.[file:1]"
              },
              "serialNumber": {
                "type": "string",
                "example": "LAD-456789",
                "description": "Item serial number.[file:1]"
              },
              "nextInspectionDate": {
                "type": "string",
                "format": "date-time",
                "example": "2025-02-15T00:00:00+08:00",
                "description": "Next scheduled examination/inspection date.[file:1]"
              },
              "lastInspectionDate": {
                "type": "string",
                "format": "date-time",
                "example": "2025-01-15T00:00:00+08:00"
              },
              "status": {
                "type": "string",
                "enum": ["active", "overdue", "expired", "retired"],
                "example": "active"
              },
              "location": {
                "type": "string",
                "example": "Site B1 Storage"
              }
            }
          }
        },
        "description": "Digitalised tracking for site plants, powered tools, ladders with inspection scheduling.[file:1]"
      },
      "DigitalisedTrackingUpdate": {
        "type": "object",
        "required": ["trackingId"],
        "properties": {
          "trackingId": {
            "type": "string",
            "example": "TRACK-001",
            "description": "Tracking ID to update.[file:1]"
          },
          "digitalisedTrackingProperties": {
            "$ref": "#/components/schemas/DigitalisedTrackingSystem/properties/digitalisedTrackingProperties"
          }
        },
        "description": "Update request with trackingId.[file:1]"
      },
      "SoftwareDeleteRequest": {
        "type": "object",
        "required": ["trackingId", "siteId"],
        "properties": {
          "trackingId": {
            "type": "string",
            "example": "TRACK-001"
          },
          "siteId": {
            "type": "string",
            "example": "1693279120646"
          }
        },
        "description": "Delete request by trackingId and siteId.[file:1]"
      },
      "ApiResponse": {
        "type": "object",
        "properties": {
          "code": {
            "type": "integer",
            "example": 10000
          },
          "msg": {
            "type": "string",
            "example": "success"
          },
          "data": {
            "$ref": "#/components/schemas/DigitalisedTrackingSystem"
          }
        }
      },
      "SoftwareListResponse": {
        "type": "object",
        "properties": {
          "code": {
            "type": "integer",
            "example": 10000
          },
          "msg": {
            "type": "string",
            "example": "success"
          },
          "data": {
            "type": "object",
            "properties": {
              "list": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/DigitalisedTrackingSystem"
                }
              },
              "totalCount": {
                "type": "integer",
                "example": 100
              },
              "pageSize": {
                "type": "integer",
                "example": 10
              },
              "pageNum": {
                "type": "integer",
                "example": 1
              }
            }
          }
        }
      }
    },
    "parameters": {
      "category4S": {
        "name": "category4S",
        "in": "query",
        "required": true,
        "schema": {
          "type": "string",
          "enum": ["digitalised-tracking-system"]
        },
        "example": "digitalised-tracking-system"
      },
      "siteId": {
        "name": "siteId",
        "in": "query",
        "required": true,
        "schema": {
          "type": "string"
        },
        "example": "1693279120646"
      },
      "supplierId": {
        "name": "supplierId",
        "in": "query",
        "schema": {
          "type": "string"
        },
        "example": "438"
      },
      "pageNum": {
        "name": "pageNum",
        "in": "query",
        "schema": {
          "type": "integer",
          "default": 1
        }
      },
      "pageSize": {
        "name": "pageSize",
        "in": "query",
        "schema": {
          "type": "integer",
          "default": 10,
          "maximum": 200
        }
      }
    },
    "responses": {
      "Success": {
        "description": "Success",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "code": {
                  "type": "integer",
                  "example": 10000
                },
                "msg": {
                  "type": "string",
                  "example": "success"
                }
              }
            }
          }
        }
      },
      "BadRequest": {
        "description": "Bad Request",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "code": {
                  "type": "integer",
                  "example": 10002
                },
                "msg": {
                  "type": "string",
                  "example": "missing parameters: siteId"
                }
              }
            }
          }
        }
      }
    }
  }
}
