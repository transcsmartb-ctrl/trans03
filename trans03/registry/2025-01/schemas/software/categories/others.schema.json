
{
  "openapi": "3.0.3",
  "info": {
    "title": "CIC SSSS Software APIs - Others Software",
    "description": "APIs for adding/updating/querying others software data (miscellaneous 4S software not in specific categories). From CIC SSSS API Framework v0.16 (Software-001/002/004). See Appendix C.[file:1]",
    "version": "1.0.0",
    "contact": {
      "name": "CIC SSSS"
    }
  },
  "servers": [
    {
      "url": "https://api.example.com/v1"
    }
  ],
  "tags": [
    {
      "name": "Software",
      "description": "Software data management (e-permits, tracking systems, VR training, others).[file:1]"
    }
  ],
  "paths": {
    "/software": {
      "post": {
        "tags": ["Software"],
        "summary": "Software-001 Add software related data (CMP-hosted)",
        "description": "Add new others software record.[file:1]",
        "operationId": "addSoftwareOthers",
        "security": [{"bearerAuth": []}],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SoftwareOthers"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiResponse"
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          }
        }
      },
      "patch": {
        "tags": ["Software"],
        "summary": "Software-002 Update software related data",
        "description": "Partial update for others software.[file:1]",
        "operationId": "updateSoftwareOthers",
        "security": [{"bearerAuth": []}],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SoftwareOthersUpdate"
              }
            }
          }
        },
        "responses": {
          "200": {
            "$ref": "#/components/responses/Success"
          }
        }
      },
      "delete": {
        "tags": ["Software"],
        "summary": "Software-003 Delete software related data",
        "description": "Delete by softwareId and siteId.[file:1]",
        "operationId": "deleteSoftwareOthers",
        "security": [{"bearerAuth": []}],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SoftwareDeleteRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "$ref": "#/components/responses/Success"
          }
        }
      },
      "get": {
        "tags": ["Software"],
        "summary": "Software-004 Query software related data (Solution Vendor-hosted)",
        "description": "List others software records with pagination.[file:1]",
        "parameters": [
          {
            "$ref": "#/components/parameters/category4S"
          },
          {
            "$ref": "#/components/parameters/siteId"
          },
          {
            "$ref": "#/components/parameters/supplierId"
          },
          {
            "$ref": "#/components/parameters/pageNum"
          },
          {
            "$ref": "#/components/parameters/pageSize"
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SoftwareListResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "SoftwareOthers": {
        "type": "object",
        "required": ["category4S", "siteId", "supplierId", "softwareId", "softwareName"],
        "properties": {
          "category4S": {
            "type": "string",
            "enum": ["others"],
            "example": "others",
            "description": "Fixed 4S category for miscellaneous software.[file:1]"
          },
          "siteId": {
            "type": "string",
            "example": "1693279120646",
            "description": "Vendor-defined site key.[file:1]"
          },
          "cicSiteId": {
            "type": "integer",
            "example": 438493849,
            "description": "CIC-standard site ID (optional).[file:1]"
          },
          "supplierId": {
            "type": "string",
            "example": "438",
            "description": "Software supplier ID.[file:1]"
          },
          "pushAt": {
            "type": "string",
            "format": "date-time",
            "example": "2025-01-06T14:40:16+08:00",
            "description": "Record update timestamp.[file:1]"
          },
          "softwareId": {
            "type": "string",
            "example": "SOFT-001",
            "description": "Unique software/system ID.[file:1]"
          },
          "softwareName": {
            "type": "string",
            "example": "Custom Safety Dashboard",
            "description": "Name/description of the software system.[file:1]"
          },
          "softwareType": {
            "type": "string",
            "example": "dashboard",
            "description": "Software type/purpose (free text).[file:1]"
          },
          "version": {
            "type": "string",
            "example": "2.1.3"
          },
          "status": {
            "type": "string",
            "enum": ["active", "inactive", "maintenance"],
            "example": "active"
          },
          "url": {
            "type": "string",
            "format": "uri",
            "example": "https://example.com/custom-safety-app"
          },
          "description": {
            "type": "string",
            "example": "Custom site safety management application"
          }
        },
        "description": "Catch-all category for miscellaneous 4S software systems.[file:1]"
      },
      "SoftwareOthersUpdate": {
        "type": "object",
        "required": ["softwareId"],
        "properties": {
          "softwareId": {
            "type": "string",
            "example": "SOFT-001",
            "description": "Software ID to update.[file:1]"
          }
        },
        "allOf": [
          {
            "$ref": "#/components/schemas/SoftwareOthers"
          },
          {
            "type": "object",
            "properties": {
              "softwareId": {
                "type": "string",
                "description": "Software ID to update.[file:1]"
              }
            }
          }
        ],
        "description": "Update request with softwareId.[file:1]"
      },
      "SoftwareDeleteRequest": {
        "type": "object",
        "required": ["softwareId", "siteId"],
        "properties": {
          "softwareId": {
            "type": "string",
            "example": "SOFT-001"
          },
          "siteId": {
            "type": "string",
            "example": "1693279120646"
          }
        },
        "description": "Delete request by softwareId and siteId.[file:1]"
      },
      "ApiResponse": {
        "type": "object",
        "properties": {
          "code": {
            "type": "integer",
            "example": 10000
          },
          "msg": {
            "type": "string",
            "example": "success"
          },
          "data": {
            "$ref": "#/components/schemas/SoftwareOthers"
          }
        }
      },
      "SoftwareListResponse": {
        "type": "object",
        "properties": {
          "code": {
            "type": "integer",
            "example": 10000
          },
          "msg": {
            "type": "string",
            "example": "success"
          },
          "data": {
            "type": "object",
            "properties": {
              "list": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/SoftwareOthers"
                }
              },
              "totalCount": {
                "type": "integer",
                "example": 100
              },
              "pageSize": {
                "type": "integer",
                "example": 10
              },
              "pageNum": {
                "type": "integer",
                "example": 1
              }
            }
          }
        }
      }
    },
    "parameters": {
      "category4S": {
        "name": "category4S",
        "in": "query",
        "required": true,
        "schema": {
          "type": "string",
          "enum": ["others"]
        },
        "example": "others"
      },
      "siteId": {
        "name": "siteId",
        "in": "query",
        "required": true,
        "schema": {
          "type": "string"
        },
        "example": "1693279120646"
      },
      "supplierId": {
        "name": "supplierId",
        "in": "query",
        "schema": {
          "type": "string"
        },
        "example": "438"
      },
      "pageNum": {
        "name": "pageNum",
        "in": "query",
        "schema": {
          "type": "integer",
          "default": 1
        }
      },
      "pageSize": {
        "name": "pageSize",
        "in": "query",
        "schema": {
          "type": "integer",
          "default": 10,
          "maximum": 200
        }
      }
    },
    "responses": {
      "Success": {
        "description": "Success",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "code": {
                  "type": "integer",
                  "example": 10000
                },
                "msg": {
                  "type": "string",
                  "example": "success"
                }
              }
            }
          }
        }
      },
      "BadRequest": {
        "description": "Bad Request",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "code": {
                  "type": "integer",
                  "example": 10002
                },
                "msg": {
                  "type": "string",
                  "example": "missing parameters: siteId"
                }
              }
            }
          }
        }
      }
    }
  }
}
