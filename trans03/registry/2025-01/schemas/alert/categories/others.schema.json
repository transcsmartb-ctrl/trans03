{
  "openapi": "3.0.3",
  "info": {
    "title": "CIC SSSS Alert APIs - Others",
    "description": "APIs for others category alerts (Alert-001/002/004). Generic/custom safety alerts for non-standardized 4S categories. See Appendix E[file:1].",
    "version": "1.0.0",
    "contact": {
      "name": "CIC SSSS"
    }
  },
  "servers": [
    {
      "url": "https://api.example.com/v1"
    }
  ],
  "tags": [
    {
      "name": "Alerts",
      "description": "Generic/custom safety alerts (001/002: push/update, 004: query).[file:1]"
    }
  ],
  "paths": {
    "/alerts": {
      "post": {
        "tags": ["Alerts"],
        "summary": "Alert-001 Add others category alert (CMP-hosted)",
        "description": "Push generic safety alerts (array format).[file:1]",
        "operationId": "addOthersAlert",
        "security": [{"bearerAuth": []}],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/OthersAlert"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "$ref": "#/components/responses/Success"
          }
        }
      },
      "patch": {
        "tags": ["Alerts"],
        "summary": "Alert-002 Update others category alert",
        "description": "Update generic alert status/message.[file:1]",
        "operationId": "updateOthersAlert",
        "security": [{"bearerAuth": []}],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/OthersAlert"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "$ref": "#/components/responses/Success"
          }
        }
      },
      "get": {
        "tags": ["Alerts"],
        "summary": "Alert-004 Query others category alerts (Vendor-hosted)",
        "description": "Paginated generic safety alerts by time range.[file:1]",
        "parameters": [
          {
            "name": "category4S",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "enum": ["others"]
            }
          },
          {
            "$ref": "#/components/parameters/siteId"
          },
          {
            "$ref": "#/components/parameters/supplierId"
          },
          {
            "$ref": "#/components/parameters/startTime"
          },
          {
            "$ref": "#/components/parameters/endTime"
          },
          {
            "$ref": "#/components/parameters/pageNum"
          },
          {
            "$ref": "#/components/parameters/pageSize"
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AlertListResponse"
                }
              }
            }
          }
        }
      }
    },
    "/alerts/media": {
      "post": {
        "tags": ["Alerts"],
        "summary": "Alert-003 Push others category alert media",
        "description": "Upload generic safety incident media.[file:1]",
        "operationId": "pushOthersAlertMedia",
        "security": [{"bearerAuth": []}],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/OthersMediaRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "$ref": "#/components/responses/Success"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "OthersAlert": {
        "type": "object",
        "required": ["category4S", "siteId", "supplierId", "deviceSn", "pushAt", "alertProperties"],
        "properties": {
          "category4S": {
            "type": "string",
            "const": "others"
          },
          "siteId": {
            "type": "string",
            "example": "1693279120646"
          },
          "cicSiteId": {
            "type": "integer",
            "example": 438493849
          },
          "supplierId": {
            "type": "string",
            "example": "CUSTOM-SUPPLIER-001"
          },
          "deviceSn": {
            "type": "string",
            "example": "CUSTOM-001"
          },
          "pushAt": {
            "type": "string",
            "format": "date-time",
            "example": "2025-01-06T14:40:16+08:00"
          },
          "alertProperties": {
            "$ref": "#/components/schemas/OthersAlertProperties"
          },
          "additionalProperties": {
            "type": "object",
            "description": "Flexible custom properties for non-standardized equipment/sensors[file:1]",
            "additionalProperties": true
          }
        }
      },
      "OthersAlertProperties": {
        "type": "object",
        "required": ["alertId", "alertType", "alertLevel", "alertStatus", "alertMessage", "alertTime", "alertNum"],
        "properties": {
          "alertId": {
            "type": "string",
            "example": "OTHERS-ALERT-001"
          },
          "alertType": {
            "type": "string",
            "example": "custom-environmental",
            "description": "Vendor-defined alert type[file:1]"
          },
          "alertLevel": {
            "type": "integer",
            "enum": [0, 1, 2],
            "example": 1,
            "description": "0-Notification, 1-Warning, 2-Critical[file:1]"
          },
          "alertStatus": {
            "type": "integer",
            "enum": [0,1,2,3,4,5,6,7],
            "example": 0,
            "description": "0-Unprocessed...7-Cancelled[file:1]"
          },
          "alertMessage": {
            "type": "object",
            "properties": {
              "zh-CN": {"type": "string"},
              "zh-HK": {"type": "string"},
              "en-HK": {"type": "string", "example": "Custom sensor threshold exceeded in zone-003"}
            }
          },
          "alertTime": {
            "type": "string",
            "format": "date-time",
            "example": "2025-01-06T14:40:16+08:00"
          },
          "alertNum": {
            "type": "number",
            "example": 75.3,
            "description": "Custom metric value triggering alert[file:1]"
          },
          "customMetrics": {
            "type": "object",
            "additionalProperties": true,
            "example": {
              "humidity": 85,
              "customSensor1": "value1"
            }
          }
        }
      },
      "OthersMediaRequest": {
        "type": "array",
        "items": {
          "type": "object",
          "required": ["category4S", "siteId", "supplierId", "alertId", "pushAt", "videoUrl"],
          "properties": {
            "category4S": {"type": "string", "const": "others"},
            "siteId": {"type": "string"},
            "cicSiteId": {"type": "integer"},
            "supplierId": {"type": "string"},
            "alertId": {"type": "string"},
            "pushAt": {"type": "string", "format": "date-time"},
            "videoUrl": {
              "type": "string",
              "format": "uri",
              "pattern": ".*\\.(mp4|avi|wmv|rmvb|jpg|png|pdf)$"
            }
          }
        }
      },
      "ApiResponse": {
        "type": "object",
        "properties": {
          "code": {"type": "integer", "example": 10000},
          "msg": {"type": "string", "example": "success"},
          "data": {"type": "null"}
        }
      },
      "AlertListResponse": {
        "type": "object",
        "properties": {
          "code": {"type": "integer", "example": 10000},
          "msg": {"type": "string", "example": "success"},
          "data": {
            "type": "object",
            "properties": {
              "list": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/OthersAlert"
                }
              },
              "totalCount": {"type": "integer", "example": 110},
              "pageNum": {"type": "integer"},
              "pageSize": {"type": "integer"}
            }
          }
        }
      }
    },
    "parameters": {
      "siteId": {
        "name": "siteId",
        "in": "query",
        "required": true,
        "schema": {"type": "string"}
      },
      "supplierId": {
        "name": "supplierId",
        "in": "query",
        "required": true,
        "schema": {"type": "string"}
      },
      "startTime": {
        "name": "startTime",
        "in": "query",
        "schema": {"type": "string", "format": "date-time"}
      },
      "endTime": {
        "name": "endTime",
        "in": "query",
        "schema": {"type": "string", "format": "date-time"}
      },
      "pageNum": {
        "name": "pageNum",
        "in": "query",
        "schema": {"type": "integer", "default": 1}
      },
      "pageSize": {
        "name": "pageSize",
        "in": "query",
        "schema": {"type": "integer", "default": 10}
      }
    },
    "responses": {
      "Success": {
        "description": "Success",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/ApiResponse"
            }
          }
        }
      }
    }
  }
}
