{
  "openapi": "3.0.3",
  "info": {
    "title": "CIC SSSS Alert APIs - Confined Space Monitoring",
    "description": "APIs for confined space monitoring alerts (Alert-001/002/004). Gas levels (O2, CO, CO2, H2S, CH4), temperature, humidity, LEL. See Appendix E.[file:1]",
    "version": "1.0.0",
    "contact": {
      "name": "CIC SSSS"
    }
  },
  "servers": [
    {
      "url": "https://api.example.com/v1"
    }
  ],
  "tags": [
    {
      "name": "Alerts",
      "description": "Event-driven confined space alerts (001/002: push/update, 004: query).[file:1]"
    }
  ],
  "paths": {
    "/alerts": {
      "post": {
        "tags": ["Alerts"],
        "summary": "Alert-001 Add confined-space alert (CMP-hosted)",
        "description": "Push new confined space detection alert (array format).[file:1]",
        "operationId": "addConfinedSpaceAlert",
        "security": [{"bearerAuth": []}],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/ConfinedSpaceAlert"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "$ref": "#/components/responses/Success"
          }
        }
      },
      "patch": {
        "tags": ["Alerts"],
        "summary": "Alert-002 Update confined-space alert",
        "description": "Update confined space alert status/message.[file:1]",
        "operationId": "updateConfinedSpaceAlert",
        "security": [{"bearerAuth": []}],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/ConfinedSpaceAlert"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "$ref": "#/components/responses/Success"
          }
        }
      },
      "get": {
        "tags": ["Alerts"],
        "summary": "Alert-004 Query confined-space alerts (Vendor-hosted)",
        "description": "Paginated confined space alerts by time range.[file:1]",
        "parameters": [
          {
            "name": "category4S",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "enum": ["confined-space"]
            }
          },
          {
            "$ref": "#/components/parameters/siteId"
          },
          {
            "$ref": "#/components/parameters/supplierId"
          },
          {
            "$ref": "#/components/parameters/startTime"
          },
          {
            "$ref": "#/components/parameters/endTime"
          },
          {
            "$ref": "#/components/parameters/pageNum"
          },
          {
            "$ref": "#/components/parameters/pageSize"
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AlertListResponse"
                }
              }
            }
          }
        }
      }
    },
    "/alerts/media": {
      "post": {
        "tags": ["Alerts"],
        "summary": "Alert-003 Push confined-space alert media",
        "description": "Upload confined space alert video/photo.[file:1]",
        "operationId": "pushConfinedSpaceAlertMedia",
        "security": [{"bearerAuth": []}],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ConfinedSpaceMediaRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "$ref": "#/components/responses/Success"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "ConfinedSpaceAlert": {
        "type": "object",
        "required": ["category4S", "siteId", "supplierId", "deviceSn", "pushAt", "alertProperties"],
        "properties": {
          "category4S": {
            "type": "string",
            "const": "confined-space"
          },
          "siteId": {
            "type": "string",
            "example": "1693279120646"
          },
          "cicSiteId": {
            "type": "integer",
            "example": 438493849
          },
          "supplierId": {
            "type": "string",
            "example": "438"
          },
          "deviceSn": {
            "type": "string",
            "example": "CS-MON-001"
          },
          "pushAt": {
            "type": "string",
            "format": "date-time",
            "example": "2025-01-06T14:40:16+08:00"
          },
          "alertProperties": {
            "$ref": "#/components/schemas/ConfinedSpaceAlertProperties"
          },
          "additionalProperties": {
            "type": "object",
            "properties": {
              "imageUrl": {
                "type": "string",
                "format": "uri"
              },
              "notifyRecipient": {
                "type": "object",
                "properties": {
                  "name": {"type": "string"},
                  "phone": {"type": "string"}
                }
              },
              "triggerPersonnel": {
                "type": "object",
                "properties": {
                  "id": {"type": "string"},
                  "name": {"type": "string"}
                }
              },
              "confidence": {
                "type": "number",
                "minimum": 0,
                "maximum": 1
              },
              "thresholdMax": {
                "type": "number",
                "example": 30
              },
              "thresholdMin": {
                "type": "number",
                "example": 19.5
              },
              "currentValue": {
                "type": "number",
                "example": 18.2
              },
              "unit": {
                "type": "string",
                "example": "%"
              },
              "workerId": {
                "type": "string",
                "example": "W1001"
              },
              "bioStatus": {
                "type": "boolean"
              },
              "sosFlag": {
                "type": "boolean"
              },
              "spaceName": {
                "type": "string",
                "example": "Tank B2"
              }
            }
          }
        }
      },
      "ConfinedSpaceAlertProperties": {
        "type": "object",
        "required": ["alertId", "alertType", "alertLevel", "alertStatus", "alertMessage", "alertTime", "alertNum"],
        "properties": {
          "alertId": {
            "type": "string",
            "example": "CS-ALERT-001"
          },
          "alertType": {
            "type": "string",
            "enum": ["humidity-alert", "temperature-alert", "o2-alert", "co-alert", "co2-alert", "h2s-alert", "ch4-alert", "lel", "others"],
            "example": "o2-alert"
          },
          "alertLevel": {
            "type": "integer",
            "enum": [0, 1, 2],
            "example": 2,
            "description": "0-Notification, 1-Warning, 2-Critical[file:1]"
          },
          "alertStatus": {
            "type": "integer",
            "enum": [0,1,2,3,4,5,6,7],
            "example": 0,
            "description": "0-Unprocessed...7-Cancelled[file:1]"
          },
          "alertMessage": {
            "type": "object",
            "properties": {
              "zh-CN": {"type": "string"},
              "zh-HK": {"type": "string"},
              "en-HK": {"type": "string", "example": "Oxygen level critically low (18.2%)"}
            }
          },
          "alertTime": {
            "type": "string",
            "format": "date-time",
            "example": "2025-01-06T14:40:16+08:00"
          },
          "alertNum": {
            "type": "number",
            "example": 18.2,
            "description": "Alert severity value (measured level)[file:1]"
          }
        }
      },
      "ConfinedSpaceMediaRequest": {
        "type": "array",
        "items": {
          "type": "object",
          "required": ["category4S", "siteId", "supplierId", "alertId", "pushAt", "videoUrl"],
          "properties": {
            "category4S": {"type": "string", "const": "confined-space"},
            "siteId": {"type": "string"},
            "cicSiteId": {"type": "integer"},
            "supplierId": {"type": "string"},
            "alertId": {"type": "string"},
            "pushAt": {"type": "string", "format": "date-time"},
            "videoUrl": {
              "type": "string",
              "format": "uri",
              "pattern": ".*\\.(mp4|avi|wmv|rmvb)$"
            }
          }
        }
      },
      "ApiResponse": {
        "type": "object",
        "properties": {
          "code": {"type": "integer", "example": 10000},
          "msg": {"type": "string", "example": "success"},
          "data": {"type": "null"}
        }
      },
      "AlertListResponse": {
        "type": "object",
        "properties": {
          "code": {"type": "integer", "example": 10000},
          "msg": {"type": "string", "example": "success"},
          "data": {
            "type": "object",
            "properties": {
              "list": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/ConfinedSpaceAlert"
                }
              },
              "totalCount": {"type": "integer", "example": 110},
              "pageNum": {"type": "integer"},
              "pageSize": {"type": "integer"}
            }
          }
        }
      }
    },
    "parameters": {
      "siteId": {
        "name": "siteId",
        "in": "query",
        "required": true,
        "schema": {"type": "string"}
      },
      "supplierId": {
        "name": "supplierId",
        "in": "query",
        "required": true,
        "schema": {"type": "string"}
      },
      "startTime": {
        "name": "startTime",
        "in": "query",
        "schema": {"type": "string", "format": "date-time"}
      },
      "endTime": {
        "name": "endTime",
        "in": "query",
        "schema": {"type": "string", "format": "date-time"}
      },
      "pageNum": {
        "name": "pageNum",
        "in": "query",
        "schema": {"type": "integer", "default": 1}
      },
      "pageSize": {
        "name": "pageSize",
        "in": "query",
        "schema": {"type": "integer", "default": 10}
      }
    },
    "responses": {
      "Success": {
        "description": "Success",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/ApiResponse"
            }
          }
        }
      }
    }
  }
}
