{
  "openapi": "3.0.3",
  "info": {
    "title": "CIC SSSS Alert APIs - Tower Crane",
    "description": "APIs for tower-crane alerts (Alert-001/002/004). Load limits, height exceedance, proximity, wind speed, anti-collision alerts. See Appendix E[file:1].",
    "version": "1.0.0",
    "contact": {
      "name": "CIC SSSS"
    }
  },
  "servers": [
    {
      "url": "https://api.example.com/v1"
    }
  ],
  "tags": [
    {
      "name": "Alerts",
      "description": "Tower crane operation safety alerts (001/002: push/update, 004: query).[file:1]"
    }
  ],
  "paths": {
    "/alerts": {
      "post": {
        "tags": ["Alerts"],
        "summary": "Alert-001 Add tower-crane alert (CMP-hosted)",
        "description": "Push tower crane safety alerts (array format).[file:1]",
        "operationId": "addTowerCraneAlert",
        "security": [{"bearerAuth": []}],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/TowerCraneAlert"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "$ref": "#/components/responses/Success"
          }
        }
      },
      "patch": {
        "tags": ["Alerts"],
        "summary": "Alert-002 Update tower-crane alert",
        "description": "Update crane alert status/message.[file:1]",
        "operationId": "updateTowerCraneAlert",
        "security": [{"bearerAuth": []}],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/TowerCraneAlert"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "$ref": "#/components/responses/Success"
          }
        }
      },
      "get": {
        "tags": ["Alerts"],
        "summary": "Alert-004 Query tower-crane alerts (Vendor-hosted)",
        "description": "Paginated crane safety alerts by time range.[file:1]",
        "parameters": [
          {
            "name": "category4S",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "enum": ["tower-crane"]
            }
          },
          {
            "$ref": "#/components/parameters/siteId"
          },
          {
            "$ref": "#/components/parameters/supplierId"
          },
          {
            "$ref": "#/components/parameters/startTime"
          },
          {
            "$ref": "#/components/parameters/endTime"
          },
          {
            "$ref": "#/components/parameters/pageNum"
          },
          {
            "$ref": "#/components/parameters/pageSize"
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AlertListResponse"
                }
              }
            }
          }
        }
      }
    },
    "/alerts/media": {
      "post": {
        "tags": ["Alerts"],
        "summary": "Alert-003 Push tower-crane alert media",
        "description": "Upload crane incident/slew videos/photos.[file:1]",
        "operationId": "pushTowerCraneAlertMedia",
        "security": [{"bearerAuth": []}],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/TowerCraneMediaRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "$ref": "#/components/responses/Success"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "TowerCraneAlert": {
        "type": "object",
        "required": ["category4S", "siteId", "supplierId", "deviceSn", "pushAt", "alertProperties"],
        "properties": {
          "category4S": {
            "type": "string",
            "const": "tower-crane"
          },
          "siteId": {
            "type": "string",
            "example": "1693279120646"
          },
          "cicSiteId": {
            "type": "integer",
            "example": 438493849
          },
          "supplierId": {
            "type": "string",
            "example": "CRANE-SUPPLIER-001"
          },
          "deviceSn": {
            "type": "string",
            "example": "TC-001"
          },
          "pushAt": {
            "type": "string",
            "format": "date-time",
            "example": "2025-01-06T14:40:16+08:00"
          },
          "alertProperties": {
            "$ref": "#/components/schemas/TowerCraneAlertProperties"
          },
          "additionalProperties": {
            "type": "object",
            "properties": {
              "imageUrl": {
                "type": "string",
                "format": "uri"
              },
              "craneId": {
                "type": "string",
                "example": "TC001"
              },
              "operatorId": {
                "type": "string",
                "example": "OP-789"
              },
              "operatorName": {
                "type": "string",
                "example": "HO Wing Hong"
              },
              "zoneId": {
                "type": "string",
                "example": "crane-zone-01"
              },
              "load": {
                "type": "number",
                "example": 18.5,
                "unit": "tons"
              },
              "maxLoad": {
                "type": "number",
                "example": 15.0
              },
              "liftingHeight": {
                "type": "number",
                "example": 85,
                "unit": "meters"
              },
              "maxHeight": {
                "type": "number",
                "example": 75
              },
              "windSpeed": {
                "type": "number",
                "example": 16.2,
                "unit": "m/s"
              },
              "maxWindSpeed": {
                "type": "number",
                "example": 12.0
              },
              "slewAngle": {
                "type": "number",
                "example": 245,
                "unit": "degrees"
              },
              "proximityDistance": {
                "type": "number",
                "example": 2.1,
                "unit": "meters"
              }
            }
          }
        }
      },
      "TowerCraneAlertProperties": {
        "type": "object",
        "required": ["alertId", "alertType", "alertLevel", "alertStatus", "alertMessage", "alertTime", "alertNum"],
        "properties": {
          "alertId": {
            "type": "string",
            "example": "TC-ALERT-001"
          },
          "alertType": {
            "type": "string",
            "enum": ["overload", "overheight", "high-wind", "proximity-collision", "anti-two-block", "others"],
            "example": "overload"
          },
          "alertLevel": {
            "type": "integer",
            "enum": [0, 1, 2],
            "example": 2,
            "description": "0-Notification, 1-Warning, 2-Critical[file:1]"
          },
          "alertStatus": {
            "type": "integer",
            "enum": [0,1,2,3,4,5,6,7],
            "example": 0,
            "description": "0-Unprocessed...7-Cancelled[file:1]"
          },
          "alertMessage": {
            "type": "object",
            "properties": {
              "zh-CN": {"type": "string"},
              "zh-HK": {"type": "string"},
              "en-HK": {"type": "string", "example": "Tower Crane TC001 overload: 18.5t > 15t limit"}
            }
          },
          "alertTime": {
            "type": "string",
            "format": "date-time",
            "example": "2025-01-06T14:40:16+08:00"
          },
          "alertNum": {
            "type": "number",
            "example": 18.5,
            "description": "Load/height/wind speed value[file:1]"
          }
        }
      },
      "TowerCraneMediaRequest": {
        "type": "array",
        "items": {
          "type": "object",
          "required": ["category4S", "siteId", "supplierId", "alertId", "pushAt", "videoUrl"],
          "properties": {
            "category4S": {"type": "string", "const": "tower-crane"},
            "siteId": {"type": "string"},
            "cicSiteId": {"type": "integer"},
            "supplierId": {"type": "string"},
            "alertId": {"type": "string"},
            "pushAt": {"type": "string", "format": "date-time"},
            "videoUrl": {
              "type": "string",
              "format": "uri",
              "pattern": ".*\\.(mp4|avi|wmv|rmvb|jpg|png)$"
            }
          }
        }
      },
      "ApiResponse": {
        "type": "object",
        "properties": {
          "code": {"type": "integer", "example": 10000},
          "msg": {"type": "string", "example": "success"},
          "data": {"type": "null"}
        }
      },
      "AlertListResponse": {
        "type": "object",
        "properties": {
          "code": {"type": "integer", "example": 10000},
          "msg": {"type": "string", "example": "success"},
          "data": {
            "type": "object",
            "properties": {
              "list": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/TowerCraneAlert"
                }
              },
              "totalCount": {"type": "integer", "example": 110},
              "pageNum": {"type": "integer"},
              "pageSize": {"type": "integer"}
            }
          }
        }
      }
    },
    "parameters": {
      "siteId": {
        "name": "siteId",
        "in": "query",
        "required": true,
        "schema": {"type": "string"}
      },
      "supplierId": {
        "name": "supplierId",
        "in": "query",
        "required": true,
        "schema": {"type": "string"}
      },
      "startTime": {
        "name": "startTime",
        "in": "query",
        "schema": {"type": "string", "format": "date-time"}
      },
      "endTime": {
        "name": "endTime",
        "in": "query",
        "schema": {"type": "string", "format": "date-time"}
      },
      "pageNum": {
        "name": "pageNum",
        "in": "query",
        "schema": {"type": "integer", "default": 1}
      },
      "pageSize": {
        "name": "pageSize",
        "in": "query",
        "schema": {"type": "integer", "default": 10}
      }
    },
    "responses": {
      "Success": {
        "description": "Success",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/ApiResponse"
            }
          }
        }
      }
    }
  }
}
