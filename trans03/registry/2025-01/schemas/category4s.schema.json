
{
  "openapi": "3.0.3",
  "info": {
    "title": "CIC SSSS 4S Categories API",
    "description": "Category4S-001 List all available 4S categories. Standardized category codes from Appendix A Category 4S Type Code Table. Used in all alert/measurement/device APIs[file:1].",
    "version": "1.0.0",
    "contact": {
      "name": "CIC SSSS"
    }
  },
  "servers": [
    {
      "url": "https://api.example.com/v1"
    }
  ],
  "tags": [
    {
      "name": "4S Categories",
      "description": "Available 4S category codes (Category4S-001)[file:1]"
    }
  ],
  "paths": {
    "/categories-4s": {
      "get": {
        "tags": ["4S Categories"],
        "summary": "Category4S-001 List all available 4S categories",
        "description": "Complete directory of standardized 4S categories from Appendix A. Both CMP & Vendor implement[file:1].",
        "operationId": "list4SCategories",
        "security": [{"bearerAuth": []}],
        "parameters": [
          {
            "name": "mandatory",
            "in": "query",
            "schema": {
              "type": "boolean",
              "description": "Dev Bureau TC(W) No.3/2023 required categories"
            }
          },
          {
            "name": "status",
            "in": "query",
            "schema": {
              "type": "string",
              "enum": ["active", "deprecated", "proposed"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Complete 4S category list",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Category4SListResponse"
                }
              }
            }
          }
        }
      }
    },
    "/categories-4s/{category4S}": {
      "get": {
        "tags": ["4S Categories"],
        "summary": "Get specific 4S category details",
        "description": "Detailed schema/capabilities for specific category code[file:1].",
        "operationId": "getCategory4SDetails",
        "security": [{"bearerAuth": []}],
        "parameters": [
          {
            "name": "category4S",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Category details",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Category4SDetailResponse"
                }
              }
            }
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "Category4SInfo": {
        "type": "object",
        "required": ["code", "name", "description", "mandatory", "supportedApis"],
        "properties": {
          "code": {
            "type": "string",
            "description": "Unique category code (Appendix A)[file:1]"
          },
          "name": {
            "type": "object",
            "properties": {
              "en-HK": {"type": "string"},
              "zh-HK": {"type": "string"},
              "zh-CN": {"type": "string"}
            }
          },
          "description": {
            "type": "object",
            "properties": {
              "en-HK": {"type": "string"},
              "zh-HK": {"type": "string"}
            }
          },
          "mandatory": {
            "type": "boolean",
            "description": "Dev Bureau TC(W) No.3/2023 required[file:1]"
          },
          "deviceType": {
            "type": "string",
            "enum": ["iot", "software", "both"],
            "description": "IoT hardware vs software-based"
          },
          "supportedApis": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": ["device-mgmt", "software-mgmt", "measurement", "alert"]
            }
          },
          "version": {
            "type": "string",
            "example": "1.0"
          },
          "status": {
            "type": "string",
            "enum": ["active", "deprecated", "proposed"]
          },
          "schemaReference": {
            "type": "string",
            "format": "uri",
            "description": "Link to category-specific schema"
          }
        }
      },
      "Category4SListResponse": {
        "type": "object",
        "properties": {
          "code": {"type": "integer", "example": 10000},
          "msg": {"type": "string", "example": "success"},
          "data": {
            "type": "object",
            "properties": {
              "categories": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/Category4SInfo"
                }
              },
              "totalCount": {"type": "integer"},
              "mandatoryCount": {"type": "integer"},
              "deprecatedCount": {"type": "integer"}
            }
          }
        }
      },
      "Category4SDetailResponse": {
        "type": "object",
        "properties": {
          "code": {"type": "integer", "example": 10000},
          "data": {
            "$ref": "#/components/schemas/Category4SInfo"
          }
        }
      },
      "ApiResponse": {
        "type": "object",
        "properties": {
          "code": {"type": "integer"},
          "msg": {"type": "string"},
          "data": {"type": "null"}
        }
      }
    },
    "responses": {
      "NotFound": {
        "description": "Category not found",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/ApiResponse"
            }
          }
        }
      }
    }
  }
}
